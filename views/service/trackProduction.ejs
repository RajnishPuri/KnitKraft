<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- set base URL -->
    <base href="../" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="theme-color" content="#000000" />
    <title>Knitkraft</title>
    <meta name="description" content="Knitkraft HTML Mobile Template" />
    <meta
      name="keywords"
      content="bootstrap, wallet, banking, fintech mobile template, cordova, phonegap, mobile, html, responsive"
    />
    <link
      rel="icon"
      type="image/png"
      href="assets/img/favicon.png"
      sizes="32x32"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="assets/img/icon/192x192.png"
    />
    <link rel="stylesheet" href="../assets/css/weather.css" />
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link rel="manifest" href="__manifest.json" />
    <style>
      .date {
        font-weight: 500;
        color: #fff;
        margin-bottom: 0.5rem;
        padding: 0 1rem;
      }
      .modal-content {
        max-height: none !important;
      }
    </style>
  </head>

  <body>
    <!-- loader -->
    <div id="loader">
      <img
        src="../assets/img/loading-icon.png"
        alt="icon"
        class="loading-icon"
      />
    </div>
    <!-- * loader -->

    <!-- App Header -->
    <div class="appHeader bg-primary text-light">
      <div class="left">
        <a
          href="#"
          class="headerButton"
          onclick="logout()"
        >
        <ion-icon name="log-out-outline"></ion-icon>
        </a>
      </div>
      <div class="pageTitle">
        <img src="assets/img/logo.png" alt="logo" class="logo" />
      </div>
      <div class="right">
        <a href="app-notifications.html" class="headerButton">
          <ion-icon class="icon" name="notifications-outline"></ion-icon>
          <span class="badge badge-danger">4</span>
        </a>
        <a href="./overview/profile.html" class="headerButton">
          <img
            src="assets/img/sample/avatar/avatar1.jpg"
            alt="image"
            class="imaged w32"
          />
          <span class="badge badge-danger">6</span>
        </a>
      </div>
    </div>
    <!-- * App Header -->

    <!-- App Capsule -->
    <div id="appCapsule">
      <div id="allFarmers"></div>
    </div>

    <!-- * App Capsule -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
      var PROGRESS_ARRAY = [
        "Raising livestock",
        "Shearing",
        "Skirting & Sorting",
        "Cleaning",
        "Carding",
        "Combing",
        "Spinnging",
        "Dyeing",
        "Weaving",
        "Finishing",
        "Ready to ship",
      ];

      $.ajax({
        url: "http://localhost:4000/pages/users",
        type: "POST",
        success: function (data) {
          data.forEach((farmer, index) => {
            if (farmer.role == "farmer") {
            console.log(farmer);
              var progressHTML = "";
              var progress = farmer.progress;
              PROGRESS_ARRAY.forEach((prg, index) => {
                var lastUpdated = new Date(
                  parseInt(farmer.lastUpdated)
                ).toLocaleString();
                progressHTML += `
          <div class="item">
            <div type="radio" class="dot ${
              index <= progress ? "bg-danger" : "bg-secondary"
            }" ></div>
            <div class="content">
              <h4 class="title">${prg}</h4>
              ${
                index == progress
                  ? `<p class="text-danger">${
                      lastUpdated
                        ? `Last Updated: ${new Date(
                            parseInt(lastUpdated)
                          ).toLocaleString()}`
                        : ""
                    }</p>`
                  : ""
              }
            </div>
          </div>
                        `;
              });

              allFarmers.innerHTML += `
                        <div class="accordion mb-2" id="accordionExample${index}">
                          <div class="accordion-item">
                            <h2
                              class="accordion-header"
                              style="display: flex; align-items: center; margin-left: 3vw"
                            >

                              <button
                                class="accordion-button collapsed"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#accordion00${index}"
                              >
                                ${farmer.name} - ${farmer.mobileNumber}
                              </button>
                            </h2>
                            <div
                              id="accordion00${index}"
                              class="accordion-collapse collapse"
                              data-bs-parent="#accordionExample${index}"
                            >
                              <div class="accordion-body">
                                <div class="timeline ms-3" id="progressTimeline">
                                    ${progressHTML}
            
        </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        `;
            }
          });
        },
      });
    </script>

    <!-- App Bottom Menu -->
    <div class="appBottomMenu">
      <a href="./service" class="item">
        <div class="col">
          <ion-icon name="pie-chart-outline"></ion-icon>
          <strong>Overview</strong>
        </div>
      </a>
      <a href="../service/trackProduction" class="item active">
        <div class="col">
          <ion-icon name="card-outline"></ion-icon>
          <strong>Track Production</strong>
        </div>
      </a>
    </div>
    <!-- * App Bottom Menu -->

    <script src="../assets/js/lib/bootstrap.bundle.min.js"></script>
    <!-- Ionicons -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <script src="../assets/js/base.js"></script>
  </body>
</html>
