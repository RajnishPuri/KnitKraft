      .point {
        background-color: #32a751;
        /* background: url(badge.png) no-repeat center center/cover; */
        border-radius: 50%;
        position: absolute;
        left: 0;
        top: 0;
        text-align: center;
        padding: 10px;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: 500;
        text-transform: uppercase;
        aspect-ratio: 1/1;
        font-size: 1.3em;
        box-shadow: 1px 1px 40px -5px #fff;
        transition: all 0.3s ease-in-out;
      }
      .point:hover {
        transform: scale(1.1);
        box-shadow: 1px 1px 40px -5px rgb(123, 212, 39);
        background-color: #fff;
        color: black;
      }
      .point img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        opacity: 0;
        transform: translate(0);
        transition: all 0.3s ease-in-out;
      }
      .point:hover img {
        opacity: 1;
        transform: var(--transform);
      }

      .subpoint {
        padding: 10px;
        background-color: #f44;
        border-radius: 50%;
        position: absolute;
        left: 0;
        top: 0;
        text-align: center;
        line-height: 10px;
        box-shadow: 1px 1px 40px -5px #fff;
        /* transform: translate(-0%, -50%); */
        /* aspect-ratio: 1/1; */
        font-size: 0em;
        height: 50px;
        width: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #222;
      }
      .subpoint.completed {
        background-color: #32a751;
        color: #fff;
      }
      .subpoint.active {
        background-color: rgb(68, 255, 236);
        color: #fff;
        transform: scale(1.5);
        background: url("https://upload.wikimedia.org/wikipedia/commons/e/e3/Sheep.svg") no-repeat center center/cover;
