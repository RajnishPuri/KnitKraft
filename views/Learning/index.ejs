            //   {
            //     content: "Learn Sleeping",
            //   },
            //   {
            //     content: "Learn Playing",
            //   },
          ],
        },
      ];
      var localPoints = JSON.parse(localStorage.getItem("points"));
      if (localPoints) {
        points = localPoints;
      } else {
        localStorage.setItem("points", JSON.stringify(points));
      }
      var path = document.querySelector(".path");
      var pathWidth = path.offsetWidth;
      var pathHeight = path.offsetHeight;
      var pathLeft = path.offsetLeft;
      var pathTop = path.offsetTop;
      var l = 10;
      var t = 3;
      var flag = 0;
      points.forEach(function (point, index) {
        if (index % 3 == 0 || index % 3 == 2) l = 12;
        else l = 41;
        var div = document.createElement("div");
        div.className = "point";
        if (index == points.length - 1) {
          div.setAttribute("id", "end");
          // scroll to this point
        }
        div.addEventListener("click",()=>{
            setTimeout(() => {
                location.href = point.redirect;
              }, 700);
        })

        div.style.left = l + "vw";
        div.style.top = t + "vh";
        div.innerHTML = point.content;
        var img = document.createElement("img");
        img.src = point.image;
        img.style.objectFit = "contain";
        img.style.position = "absolute";
        img.style.width = "100px";
        img.style.height = "100px";
        img.style.top = "0";
        // set hover effect on image
        img.style.setProperty("--transform", point.hoverImageTransform);
        // img.style.opacity = "0";
        div.appendChild(img);
        path.appendChild(div);
        if (point.subpoints) {
          point.subpoints.forEach(function (subpoint, i) {
            var subDiv = document.createElement("div");
            subDiv.className = "subpoint";
            if(subpoint.isCompleted){
                subDiv.classList.add("completed")
            }else{
              if(flag == 0){
                // subDiv.classList.add("active")
                flag = 1;
              }
            }
            if (index == 0) {
              subDiv.style.left = l + GAPS[index % 3][i].left + "vw";
              subDiv.style.top = t + GAPS[index % 3][i].top + "vh";
            } else {
              subDiv.style.left = l + GAPS[index % 3][i].left + "vw";
              subDiv.style.top = t + GAPS[index % 3][i].top + "vh";
            }
            subDiv.innerHTML = subpoint.content;
            path.appendChild(subDiv);
            subDiv.addEventListener("click",()=>{
                document.getElementById("videoSrc").setAttribute("src", subpoint.video);
                document.getElementById("video").load();
                document.getElementById("videoPlayerBtn").click();
                if(!subpoint.isCompleted){
                    subDiv.classList.add("completed");
                }
            })
          });

        }

        t += 35;
      });

