      function Popup(id) {
      }
      function changeModelBoxInputValue(id){
        //console.log("clicked")
        var warehouse = ALL_WAREHOUSE_BOOKINGS.find(warehouse => warehouse._id == id);
        console.log(warehouse);
        $("#quantityInput").val(warehouse.quantity);
        $("#woolTypeInput").val(warehouse.woolType);
        $("#fromDateInput").val(warehouse.fromDate);
        $("#toDateInput").val(warehouse.toDate);
        $("#statusInput").val(warehouse.status);
        $("#messageInput").val(warehouse.message);
        $("#shelfInput").val(warehouse.shelf);
        $("#updateBtn").attr("onclick", `updateWarehouseBooking('${warehouse._id}')`);
        document.getElementById("modelShow").click();
      }

      function updateWarehouseBooking(id){
        //console.log("updating")
        var warehouse = ALL_WAREHOUSE_BOOKINGS.find(warehouse => warehouse._id == id);
        var data = {
          ...warehouse,
          farmerId: warehouse.farmerId,
          name: warehouse.name,
          quantity: $("#quantityInput").val(),
          fromDate: $("#fromDateInput").val(),
          toDate: $("#toDateInput").val(),
          woolType: $("#woolTypeInput").val(),
          status: $("#statusInput").val(),
          message: $("#messageInput").val(),
          shelf: $("#shelfInput").val(),
        }

        console.log(data, "Updating warehouse booking");
        $.ajax({
          type: "POST",
          url: "https://knitkraft.onrender.com/api/updateWarehouseBooking",
          data: JSON.stringify(data),
          contentType: "application/json",
          dataType: "json",
          success: function (response) {
            if (response.status == "success") {
              //console.log("Warehouse booking updated successfully");
              location.reload();
            } else {
             console.log("Something went wrong");
              console.log(response);
            }
          },
          error: function (err) {
           console.log("Something went wrong");
            console.log(err);
          },
        })
      }
